:host {
  display: flex;
  flex: 1;
  overflow: hidden;
  box-sizing: border-box;
  flex-flow: column;

  & .item {
    display: flex;
    flex: 1;
    padding: 3px 0;
    box-sizing: border-box;
    white-space: nowrap;

    & .name {
      font-size: 12px;
      color: rgb(128, 0, 128);
      font-family: monospace;
      margin: 0 4px 0 1px;
      box-sizing: border-box;

      &:after {
        content: ':';
        font-size: 12px;
        color: rgb(105, 105, 105);
        font-family: monospace;
      }

      &.print {
        display: none;
      }
    }

    & .value {
      font-size: 12px;
      color: rgb(105, 105, 105);
      font-family: monospace;

      &.null,
      &.undefined {
        color: rgb(105, 105, 105);
      }

      &.boolean {
        color: rgb(255, 20, 147);
      }

      &.function {
        color: rgb(255, 0, 0);
        white-space: nowrap;
      }

      &.string {
        color: rgb(255, 0, 0);
        white-space: nowrap;

        &.print {
          white-space: pre;
        }

        &:not(.print) {
          &:before,
          &:after {
            content: '"';
          }
        }
      }

      &.number {
        color: rgb(0, 0, 255);
      }

      &.array {
        color: rgb(0, 0, 0);
      }

      &.object,
      &.node {
        color: rgb(0, 0, 0);
      }

      &.node {
        color: rgb(203, 203, 203);
      }
    }
  }

  & .children {
    flex: 1;
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    padding-left: 16px;
  }
}

:host(.dark) {
  & .item {
    & .name {
      color: rgb(52, 199, 187);
    }

    & .value {
      &.function,
      &.string,
      &.array,
      &.object {
        color: rgb(203, 203, 203);
      }

      &.number {
        color: rgb(89, 166, 202);
      }
    }
  }
}
